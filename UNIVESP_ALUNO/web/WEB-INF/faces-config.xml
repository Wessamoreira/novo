<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>

	<lifecycle>
		<phase-listener>controle.arquitetura.ControleAcessoListener</phase-listener>
	</lifecycle>	

	<application>
		<resource-bundle>
			<base-name>propriedades.Botoes</base-name>
			<var>msg_botoes</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>propriedades.Aplicacao</base-name>
			<var>msg_aplic</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>propriedades.Menu</base-name>
			<var>msg_menu</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>propriedades.Mensagens</base-name>
			<var>msg</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>propriedades.Enum_pt_BR</base-name>
			<var>enum</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>propriedades.Permissao</base-name>
			<var>per</var>
		</resource-bundle>
	</application>
	<application>
		<message-bundle>propriedades.Enum_pt_BR</message-bundle>
		<locale-config>
			<default-locale>pt</default-locale>
		</locale-config>
	</application>
	<application>
		<message-bundle>propriedades.Botoes</message-bundle>
		<locale-config>
			<default-locale>pt</default-locale>
		</locale-config>
	</application>
	<application>
		<message-bundle>propriedades.Aplicacao</message-bundle>
		<locale-config>
			<default-locale>pt</default-locale>
		</locale-config>
	</application>
	<application>
		<message-bundle>propriedades.Menu</message-bundle>
		<locale-config>
			<default-locale>pt</default-locale>
		</locale-config>
	</application>
	<application>
		<message-bundle>propriedades.Mensagens</message-bundle>
		<locale-config>
			<default-locale>pt</default-locale>
		</locale-config>
	</application>	
	

	<navigation-rule>
		<description>Navegacao da pagina</description>
		<from-view-id>/*</from-view-id>		
		<navigation-case>
			<from-outcome>paginaErro</from-outcome>
			<to-view-id>/paginaErro.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>acessoRestrito</from-outcome>
			<to-view-id>/acessoRestrito.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	

	<converter>
		<converter-id>FormatadorNumericoAlteracoesCadastrais</converter-id>
		<converter-class>controle.arquitetura.FormatadorNumericoAlteracoesCadastrais</converter-class>
	</converter>
	<converter>
		<converter-id>FormatadorNumericoPermitindoValoresNulos</converter-id>
		<converter-class>controle.arquitetura.FormatadorNumericoPermitindoValoresNulos</converter-class>
	</converter>
	<converter>
		<converter-id>EnumConverter</converter-id>
		<converter-class>controle.arquitetura.EnumConverter</converter-class>
	</converter>
	<converter>
		<converter-id>FormatadorNumerico</converter-id>
		<converter-class>controle.arquitetura.FormatadorNumerico</converter-class>
	</converter>
	<converter>
		<converter-id>FormatadorNumerico2Casas</converter-id>
		<converter-class>controle.arquitetura.FormatadorNumerico2Casas</converter-class>
	</converter>
	<converter>
		<converter-id>FormatadorNumerico4Casas</converter-id>
		<converter-class>controle.arquitetura.FormatadorNumerico4Casas</converter-class>
	</converter>
	<converter>
		<converter-id>FormatadorNumerico15Casas</converter-id>
		<converter-class>controle.arquitetura.FormatadorNumerico15Casas</converter-class>
	</converter>
	<converter>
		<converter-id>FormatadorNumerico5Casas</converter-id>
		<converter-class>controle.arquitetura.FormatadorNumerico5Casas</converter-class>
	</converter>

	<converter>
        <converter-id>ConverterOrigemImagem</converter-id>
        <converter-class>controle.arquitetura.ConverterOrigemImagem</converter-class>
    </converter>

	<converter>
		<converter-id>BigDecimalConverter</converter-id>
		<converter-class>controle.arquitetura.BigDecimalConverter</converter-class>
	</converter>

	<converter>
		<converter-id>FormatadorNumerico6Casas</converter-id>
		<converter-class>controle.arquitetura.FormatadorNumerico6Casas</converter-class>
	</converter>
	
	<converter>
	    <converter-id>CaractereInvalidoConverter</converter-id>
		<converter-class>controle.arquitetura.CaractereInvalidoConverter</converter-class>
	</converter>

</faces-config>
